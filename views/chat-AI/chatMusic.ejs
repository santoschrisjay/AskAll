    <script src="https://cdn.jsdelivr.net/npm/openai"></script>
    <script>
      function sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
      }


      let mic = document.getElementById("mic")

      mic.addEventListener("click", () => {
        sleep(1000)
        window.SpeechRecognition = window.webkitSpeechRecognition

        const recognition = new SpeechRecognition()
        recognition.interimResults = true

        recognition.addEventListener('result', e => {
          const transcript = Array.from(e.results)
            .map(result => result[0])
            .map(result => result.transcript)
            .join('')

          document.getElementById("textInput").value = transcript;
        });


        mic.innerHTML = `<i class='fas fa-microphone'></i>`
        recognition.start()



        recognition.onend = function () {
          mic.innerHTML = `<i class='fas fa-microphone-slash'></i>`;
        }
      });

      let muteButton = document.getElementById("mute");




      function handleSubmit(event) {
        event.preventDefault();
        let botChat = document.querySelector('#botChat');
        let source = document.getElementsByTagName("source")
        let botChatLoading = document.querySelector('#botChatLoading');
        let botAudioSource = document.querySelector('#botAudioSource');
        botChatLoading.innerText = "Loading...";
        botChat.style.display = "none";
        botAudioSource.style.display = "none"
        const inputValue = document.getElementById('textInput').value
        document.querySelector('#userChat').innerText = inputValue;
        console.log(inputValue)
        const userMessage = [{
          role: "user",
          content: inputValue,
        },
        ]
        fetch('/music', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ inputValue })
        })
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok.');
            }
            return response.json()
          })
          .then(data => {


            return botChat.setAttribute('src', `${data}`), botAudioSource.load(), botAudioSource.play(), botAudioSource.style.display = "block", botChat.style.display = "block", botChatLoading.innerText = "", console.log(data);
          })
          .catch(error => {

            console.error('Error:', error);
          });


      }
      const handleCodePage = () => window.location.href = "/chatCode";
      const handleImagePage = () => window.location.href = "/chatImage";
      const handleConversationPage = () => window.location.href = "/chatConversation";
      const handleRantBuddyPage = () => window.location.href = "/chatRantBuddy"

    </script>
